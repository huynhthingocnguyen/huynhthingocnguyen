@using Ictshop.Models
@model Sanpham


@{
    ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<CENTER>
    <section class="section product-detail">
        <h2>CHI TIẾT SẢN PHẨM</h2>
        <div class="details container">
            <div class="left image-container">
                <div class="main">
                    <img src="@Url.Content("~" +@Model.Anhbia)" id="zoom" alt="" />
                </div>
            </div>
            <div class="right">
                <span>Home/Sản phẩm</span>
                <h1>@Model.Tensp</h1>
                <div style="color: orangered; margin-bottom: 2px;">Giá: @String.Format("{0:0,0}", @Model.Giatien)₫</div>
                <form>
                    <select id="sortSelect">
                        <option value="default">Kích cỡ</option>
                        <option value="1">XL</option>
                        <option value="2">L</option>
                    </select>
                    <span><i class="bx bx-chevron-down"></i></span>
                </form>
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = Model.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" value="Thêm vào giỏ hàng" id="bgnGioHang" />
                }
                <h3>Product Detail</h3>
                <p>
                    @Model.Mota
                </p>
            </div>
        </div>
    </section>
    <section class="section product" id="shop" aria-label="product">
        <div class="container">
            <h2 class="h2 section-title">
                <span class="span">Sản phẩm</span> nổi bậc
            </h2>
            <ul class="grid-list">
                @Html.Action("sanphamchitietPartial", "Sanpham")
            </ul>
        </div>
    </section>
</CENTER>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        console.log("hello");
        $("#zoom").imagezoomsl({
            zoomrange: [4, 4],
        });
    });
</script>
