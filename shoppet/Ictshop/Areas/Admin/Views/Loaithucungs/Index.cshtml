@model IEnumerable<Ictshop.Models.Loaithucung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý loại thú cưng</h2>

<p>
    @Html.ActionLink("Thêm mới loại thú cưng", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã loại thú cưng
        </th>
        <th>
            Tên loại thú cưng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Maltc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tenltc)
    </td>
    <td>
        <button class="btn btn-success">
            @Html.ActionLink("Sửa", "Edit", new { id = item.Maltc }, new { @style = "color:white;" })
        </button>
        <button class="btn btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Maltc }, new { @style = "color:white;" })
        </button>
        <button class="btn btn-danger">
            @Html.ActionLink("Xóa", "Delete", new { id = item.Maltc }, new { @style = "color:white;" })
        </button>
    </td>
</tr>
}

</table>
